<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8 col-xs-12">

<%= form_for(childlog) do |f| %>
  <% if childlog.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% childlog.errors.full_messages.each do |childlog| %>
          <li><%= childlog %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <div class="form-group">
    <%= f.label :title, 'ことば' %>
    <%= f.text_field :word, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, 'ことばの詳細' %>
    <%= f.text_area :content, rows:5, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :childwordtiming, 'ことばを発した日' %>
    <%= f.date_field :childwordtiming, rows:5, class: 'form-control date-picker' %>
  </div>
  
  <div class="form-group">
    <%= f.label :child, 'こども' %><BR>
    <%= f.collection_select(:child_id, current_user.children, :id, :childname, :prompt => "選択してください")%>
  </div>

  <%= f.submit '更新', class: 'btn btn-primary' %>
  <%= link_to 'ことば一覧に戻る', childlogs_url , class: 'btn btn-default'%> 
  <% end %>
  </div>
</div>