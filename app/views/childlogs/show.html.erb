<div class="pagetitle">
  <h2 align="center">ことばの詳細</h2>
</div>

<table class="table table-hover">
    <thead.thead-default>
  <tr>
    <th><h4>ことば</h4></th>
    <td><h4><%= @childlog.word %></h4></td>
  </tr>
  <tr>
    <th><h4>ことばの詳細</h4></th>
    <td><h4><%= @childlog.content %></h3></td>
  </tr>
    <tr>
    <th><h4>だれのことば</h4></th>
    <td><h4><%= @childlog.child.childname %></h4></td>
  </tr>  
  <tr>
  <tr>
    <th><h4>ことばを発した日</h4></th>
    <td><h4><%= @childlog.childwordtiming %></h4></td>
  </tr>  
  <tr>
    <th><h4>登録日時</h4></th>
    <td><h4><%= @childlog.created_at.strftime('%Y-%m-%d %H:%M') %></h4></td>
  </tr>
  <tr>
    <th><h4>更新日時</h4></th>
    <td><h4><%= @childlog.updated_at.strftime('%Y-%m-%d %H:%M') %></h4></td>
  </tr>
</table>

<%= link_to '編集', edit_childlog_path(@childlog), class: 'btn btn-primary' %>
<%= link_to '削除', @childlog, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-warning' %>
<%= link_to 'ことば一覧に戻る', childlogs_url , class: 'btn btn-default'%> 
