<h1>ことば No.<%= @childlog.id %> の詳細</h1>

<table class="table table-hover">
    <thead.thead-default>
  <tr>
    <th>No</th>
    <td><%= @childlog.id %></td>
  </tr>
  <tr>
    <th>ことば</th>
    <td><%= @childlog.word %></td>
  </tr>
  <tr>
    <th>ことばの詳細</th>
    <td><%= @childlog.content %></td>
  </tr>
  <tr>
    <th>登録日時</th>
    <td><%= @childlog.created_at %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @childlog.updated_at %></td>
  </tr>
</table>

<%= link_to '編集', edit_childlog_path(@childlog), class: 'btn btn-default' %>
<%= link_to '削除', @childlog, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>