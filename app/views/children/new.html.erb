<div class="pagetitle">
  <h2 align="center">こども情報の新規登録</h2>
</div>

<div class="row">
  <div class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8 col-xs-12">

<%= form_for(@child) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.label :childname, 'ニックネーム' %>
    <%= f.text_field :childname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :childbirthday, '誕生日' %>
    <%= f.date_field :childbirthday, value: Time.now.strftime("%Y-%m-%d"),class: 'form-control' %>
  </div>

  <%= f.submit 'こども情報の新規登録', class: 'btn btn-primary' %>
  <%= link_to 'ことば一覧に移動', childlogs_url , class: 'btn btn-default'%> 
  <% end %>
  </div>
</div>