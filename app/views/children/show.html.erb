<div class="pagetitle">
  <h2 align="center">こどもの詳細</h2>
</div>

<table class="table table-hover">
    <thead.thead-default>
  <tr>
    <th><h4>ニックネーム</h4></th>
    <td><h4><%= @child.childname %></h4></td>
  </tr>
  <tr>
    <th><h4>誕生日</h4></th>
    <td><h4><%= @child.childbirthday %></h4></td>
  </tr>
  <tr>
    <th><h4>年齢</h3></th>
    <td><h4><%= @child.age %>歳</h4></td>
  </tr> 
  <tr>
    <th><h4>登録日時</h4></th>
    <td><h4><%= @child.created_at.strftime('%Y/%m/%d %H:%M') %></h4></td>
  </tr>
  <tr>
    <th><h4>更新日時</h4></th>
    <td><h4><%= @child.updated_at.strftime('%Y/%m/%d %H:%M') %></h4></td>
  </tr>
</table>

<%= link_to '編集', edit_child_path(@child), class: 'btn btn-primary' %>
<%= link_to '削除', @child, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-warning' %>
<%= link_to 'こども一覧に戻る', children_url , class: 'btn btn-default'%> 
