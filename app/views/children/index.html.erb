  <div class="pagetitle">
    <p><h2 align="center">こども一覧</h2></p>
    <p><h3 align="center">- 登録したこどもの情報一覧だよ -</h3></p>
  </div>

  <% if @children.any? %>
    <table class="table table-hover">
      <thead.thead-default>
        <tr>
          <th><h4>ニックネーム</h4></th>
          <th><h4>誕生日</h4></th>
          <th><h4>年齢</h4></th>          
          <th><h4>登録日時</h4></th>
          <th><h4>更新日時</h4></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @children.each do |child| %>
          <tr>
            <td><h5><%= link_to child.childname, child %></h5></td>
            <td><h5><%= child.childbirthday %></h5></td>
            <td><h5><%= child.age %>歳</h5></td>            
            <td><h5><%= child.created_at.strftime('%Y-%m-%d %H:%M') %></h5></td>
            <td><h5><%= child.updated_at.strftime('%Y-%m-%d %H:%M') %></h5></td>
            <td><%= link_to '編集', edit_child_path(child), class: "btn btn-primary" %></td>
            <td><%= link_to '削除', child, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
  <% end %>
  
  <%= link_to 'こども登録', new_child_path, class: "btn btn-primary" %>
  <%= link_to 'ことば一覧に移動', childlogs_path, class: "btn btn-default" %>
